@model CrestCouriers_Career.ViewModels.ResetPasswordViewModel
@using Microsoft.Extensions.Options;
@using reCAPTCHA.AspNetCore;
@using System.Collections.Generic
@using System.Linq
@using Microsoft.AspNetCore.Http
@using Microsoft.AspNetCore.Authentication
@inject SignInManager<Account> SignInManager
@{
    ViewData["Title"] = "Log in";
}
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <title></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap2.min.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/systemstyle.css" />
</head>
<body style="height:auto;">

    <div class="container">
        <div class="row login-row-style">
            <div class="col-lg-4 login-image">
                <img src="~/img/System/Courier-blog-header-image.png" class="login-image-style" alt="">
            </div>

            <div class="col-lg-8 login-form-area">

                <div class="login-logo-location">
                    <img src="~/img/System/logo-black.png" />
                </div>
                <form asp-controller="User" asp-action="ResetPassword" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input asp-for="Email" class="form-control2" hidden />

                    <input asp-for="Token" class="form-control2" hidden />

                    <div class="input-div-location">
                        <input asp-for="Password" type="password" class="form-control2" placeholder="New password"/>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="input-div-location">
                        <input asp-for="ConfirmPassword" type="password" class="form-control2" placeholder="Confirm password"/>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>


                    <div class="button-div-location">
                        <button type="submit" class="book-now-btn" style="margin:0 auto; margin-top:30px;" name="button">Login</button>
                    </div>

                </form>

                <div class="additional-text">
                    <a class="login-single-text" asp-controller="User" asp-action="Login"><h6>Back to Login</h6></a>
                    <a class="login-single-text" asp-controller="Home" asp-action="Index"><h6>Back to website</h6></a>
                </div>

            </div>

        </div>
    </div>
</body>
</html>
