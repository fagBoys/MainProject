@{

    Layout = "_SystemAdmin";

}

@section AdminMenu{
    <ul class="menu-ul">
        <a asp-controller="Admin" asp-action="Dashboard" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Dashboard</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="Order" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Order</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="AdminSetting" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Admin setting</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="AdminAccounts" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Admin accounts</h5></li>
            </div>
        </a>
        <a asp-controller="User" asp-action="UserAccounts" class="menu-option-link">
            <div class="panel-option">
                <li><h5>User accounts</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="Articles" class="menu-option-link">
            <div class="panel-option-active">
                <li><h5>Articles</h5></li>
            </div>
        </a>
        <a asp-controller="Admin" asp-action="Logout" class="menu-option-link">
            <div class="panel-option">
                <li><h5>Logout</h5></li>
            </div>
        </a>
    </ul>
}

<div style="margin:100px;">
    <form>
        <div class="row mb-4">
            <div class="col-sm-12">
                <input name="Title" class="form-control" placeholder="Title">
                <span class="text-danger field-validation-valid" data-valmsg-for="Subject" data-valmsg-replace="true"></span>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card" style="max-height: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/img/article/post-image22.jpg" style="width:100%;" alt="" />
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h3 class="card-title" style="text-align:left;">Browse the post image</h3>
                                <p class="card-text" style="text-align:left; font-size:20px;">Post image should be smaller than 500 KB and dimension</p>
                                <p class="card-text" style="text-align:left;"><small class="text-muted">Last updated 3 mins ago</small></p>

                                <button class="book-now-btn" style="width:150px; height:50px; float:right;">
                                    Browse
                                    <input type="file" style="opacity:0%; width:100%;" class="btn-dark" />
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/img/detail/article22-image1.jpg" />
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/img/detail/article22-image2.jpg" />
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/img/detail/article22-image3.jpg" />
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-12 mb-4">
                <div class="card">
                    <div style="background-color:lightgrey; height:500px;"></div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-2">
                <button class="book-now-btn" style="width:100%;">
                    Post
                </button>
            </div>
        </div>

    </form>
</div>